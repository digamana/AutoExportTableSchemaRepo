<Window x:Class="AutoExportTableSchema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoExportTableSchema"
        mc:Ignorable="d"
        Title="MainWindow" Height="301" Width="1199">
    <Grid Margin="0,0,7,-5">
        <Button Content="匯出TableSchema" Margin="1,212,-3,8" Click="ImportTemplete"/>
        <TextBox x:Name="txtbFilePath" TextWrapping="Wrap" Margin="174,154,302,75" ToolTip="" IsReadOnly="True"/>
        <RadioButton x:Name="rdoBasic" Content="基本輸入" Margin="10,23,1049,182" IsChecked="True"/>
        <RadioButton x:Name="rdoConnectString" Content="輸入ConnectString" Margin="11,88,1033,109"/>
        <RadioButton x:Name="rdoFile" Content="匯入範本" Margin="10,161,1049,58"/>
        <Button x:Name="btnDownLoadTemplete" Content="下載範本" Margin="877,154,147,75" Click="DownLoadTemplete"/>
        <TextBox x:Name="txtbConnectString" TextWrapping="Wrap" Margin="174,88,302,145"/>
        <Button x:Name="btnImportTemplete" Content="匯入範本" Margin="1032,154,-3,75" Click="btnImportTemplete_Click"/>
        <GroupBox x:Name="GroupBasic" Header="" Margin="174,10,-2,194">
            <Grid Margin="-6,-4,-6.4,9.8">
                <Label Content="伺服器名稱" Margin="0,0,921.2,-0.4" RenderTransformOrigin="1.764,6.859"/>
                <TextBox x:Name="txtbServeName" Margin="88,0,744,-15.4" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" SpellCheck.IsEnabled="True"/>
                <Label Content="資料庫名稱" Margin="275,1,658,-1.4" RenderTransformOrigin="1.764,6.859"/>
                <TextBox x:Name="txtbDbName" Margin="361,-1,542,-15.4" AcceptsReturn="True" SpellCheck.IsEnabled="True" HorizontalScrollBarVisibility="Auto"/>
                <Label Content="帳號" Margin="476,-1,495,-0.4" RenderTransformOrigin="1.764,6.859"/>
                <TextBox x:Name="txtbAccount" Margin="524,-2,278,-15.4" AcceptsReturn="True" SpellCheck.IsEnabled="True" HorizontalScrollBarVisibility="Auto"/>
                <Label Content="密碼" Margin="741,-2,229,1.6" RenderTransformOrigin="1.764,6.859"/>
                <PasswordBox x:Name="txtbPwd" HorizontalAlignment="Left" Height="48" Margin="790,0,0,-15.4" VerticalAlignment="Top" Width="214"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
